---
import { Image } from "astro:assets";
---

<div class="bg-[#1212124D] text-white border border-[#393939] rounded-[32px] p-4 sm:p-8 flex flex-col gap-5 w-full">
  <h2 class="font-bold text-xl">Portfolio</h2>
  <div class="flex flex-col justify-between w-full max-[930px]:flex-col max-[930px]:gap-8 min-[930px]:flex-row">
    <div class="flex flex-col h-min">
      <div class="bg-[#1D1D1D] rounded-2xl p-[10px] max-[930px]:w-fit max-[930px]:mx-auto">
        <Image
          src="/images/ooink-me.png"
          alt="profile"
          width="250"
          height="151"
          loading={"eager"}
          class={"w-full sm:w-[250px] h-auto sm:h-[151px] rounded-lg object-cover"}
        />
      </div>
      <h2 class="font-bold text-xl max-[930px]:text-center">Ooink.me</h2>
      <p class="font-normal text-sm max-[930px]:text-center">Web developing</p>
    </div>
    <div class="flex flex-col ">
      <div class="bg-[#1D1D1D] w-full sm:w-fit rounded-2xl p-[10px] max-[930px]:mx-auto">
        <Image
          src="https://firebasestorage.googleapis.com/v0/b/cosmee-world-web.appspot.com/o/images%2Fcosmeeworld-skincare.jpg?alt=media&token=22301b8e-1401-4289-9e8a-069a3daaed17"
          alt="profile"
          width="250"
          height="151"
          loading={"eager"}
          class={"w-full sm:w-[250px] h-auto sm:h-[151px] rounded-lg object-cover aspect-video"}
        />
      </div>
      <h2 class="font-bold text-xl max-[930px]:text-center">Cosmee</h2>
      <p class="font-normal text-sm max-[930px]:text-center">Web developing</p>
    </div>
    <div class="flex flex-col ">
      <div class="bg-[#1D1D1D] w-full  rounded-2xl p-[10px] max-[930px]:w-fit max-[930px]:mx-auto max-sm:w-full">
        <Image
          src="/svg/web.svg"
          alt="profile"
          width="100"
          height="151"
          loading={"eager"}
          class={"w-min sm:w-[250px] h-auto sm:h-[151px] rounded-lg object-contain max-sm:w-48 max-sm:mx-auto"}
        />
      </div>
      <h2 class="font-bold text-xl max-[930px]:text-center">Ecommerce</h2>
      <p class="font-normal text-sm max-[930px]:text-center">Backend developing</p>
    </div>
  </div>
</div>
